
<h1><%=@current_user.name%> Posts</h1>

 <% @posts.each do |post| %>
 
  <div>

    <p><%= post.content %></p>
    <p><%= link_to 'Show', post %></p>


    <% if current_user && current_user == post.user %>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Delete', post  %>
    <% end %>


     <div class="container">
        <div class="row">
          <div class="col-md-6">
                

          </div>
        </div>
     </div>

  </div>

<% end %>
   <% if current_user %>
   <%= link_to 'New Post', new_post_path %>
   <% end %>